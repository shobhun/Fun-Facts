<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen3">

    <ImageView
        android:id="@+id/isimagescreen3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_screen_share_black_24dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/istextscreen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isimagescreen3"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Share with anyone"
        android:gravity="center"
        android:textSize="32sp"/>

</RelativeLayout>