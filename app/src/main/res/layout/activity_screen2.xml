<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen2">

    <ImageView
        android:id="@+id/isimagescreen2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_signal_wifi_off_black_24dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/istextscreen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isimagescreen2"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Read new facts in offline mode"
        android:gravity="center"
        android:textSize="26sp"/>

</RelativeLayout>